CREATE TABLE BUILDINGS (BUILDING_NAME VARCHAR(5) PRIMARY KEY, CAPACITY INT);

INSERT INTO BUILDINGS VALUES('1e',24),('1w',32),('2e',16),('2w',20);

CREATE TABLE EMPLOYEES (ROLE VARCHAR (50),NAME VARCHAR(50),BUILDING VARCHAR(5),YEARS_EMAPLOYES INT, FOREIGN KEY (BUILDING) REFERENCES BUILDINGS(BUILDING_NAME));

